{% extends 'layout.html.twig' %}

{% block content %}
    <h1>
        Kategorien f√ºr Checklisten
        <a href="{{ path('checklist_index') }}" class="uk-button uk-button-primary uk-float-right">
            <i class="uk-icon-list"></i> Checklisten
        </a>
        <a href="{{ path('checklistcategory_new') }}"
           class="uk-button uk-button-success uk-float-right uk-margin-small-right">
            <i class="uk-icon-plus"></i> Neue Kategorie
        </a>
    </h1>

    <table class="uk-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for checklistCategory in checklistCategories %}
            <tr>
                <td>{{ checklistCategory.name }}</td>
                <td>{{ checklistCategory.description }}</td>
                <td class="uk-text-right">
                    <a href="{{ path('checklistcategory_edit', { 'id': checklistCategory.id }) }}"
                       class="uk-button uk-button-primary">
                        <i class="uk-icon-edit"></i>
                    </a>
                    <div class="uk-float-right uk-margin-left">
                        {{ form(deleteButtons[checklistCategory.id]) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
