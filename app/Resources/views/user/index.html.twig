{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="uk-clearfix">
        Benutzer
        <a href="{{ path('user_new') }}" class="uk-button uk-button-success uk-float-right">
            <i class="uk-icon-plus"></i> Neuer Benutzer
        </a>
    </h1>

    <div class="uk-overflow-container">
        <table class="uk-table">
            <thead>
            <tr>
                <th>Benutzername</th>
                <th>Punkte</th>
                <th>letzter Login</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        <span class="uk-badge uk-badge-success uk-badge-notification">{{ user|points }}</span>
                    </td>
                    <td>{{ user.lastLogin|date('d.m.Y H:i') }} Uhr</td>
                    <td class="uk-text-right">
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="uk-button uk-button-primary">
                            <i class="uk-icon-eye"></i>
                        </a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="uk-button uk-button-primary">
                            <i class="uk-icon-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
