{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="uk-clearfix">WÃ¤hle eine Checkliste:</h1>
    <div class="uk-grid" data-uk-grid-match="{target:'.uk-button'}" data-uk-grid-margin>
        {% for checklist in checklists if checklist.tasks|length %}
            <div class="uk-width-medium-1-3">
                <a class="uk-button uk-button-primary uk-button-large uk-width-1-1"
                   href="{{ path('check_new', {'checklist': checklist.id}) }}">
                    {{ checklist.name }}<br>
                    <small>{{ checklist.description }}</small>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}