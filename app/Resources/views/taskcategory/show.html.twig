{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="uk-clearfix">TaskCategory</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ taskCategory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ taskCategory.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('taskcategory_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('taskcategory_edit', { 'id': taskCategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
