{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="uk-clearfix">
        Checklisten
        <a href="{{ path('checklist_new') }}" class="uk-button uk-button-success uk-float-right">
            <i class="uk-icon-plus"></i> Neu
        </a>
    </h1>

    <div class="uk-overflow-container">
        <table class="uk-table">
            <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for checklist in checklists %}
                <tr>
                    <td>{{ checklist.name }}</td>
                    <td class="uk-text-right">
                        <a href="{{ path('checklist_show', { 'id': checklist.id }) }}"
                           class="uk-button uk-button-primary">
                            <i class="uk-icon-eye"></i>
                        </a>
                        <a href="{{ path('checklist_edit', { 'id': checklist.id }) }}"
                           class="uk-button uk-button-primary">
                            <i class="uk-icon-edit"></i>
                        </a>
                        <div class="uk-float-right uk-margin-left">
                            {{ form(deleteButtons[checklist.id]) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
