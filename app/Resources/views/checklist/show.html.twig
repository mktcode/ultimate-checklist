{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Checklist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ checklist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ checklist.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('checklist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('checklist_edit', { 'id': checklist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
