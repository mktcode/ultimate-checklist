{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="uk-clearfix">
        Aufgaben
        <a href="{{ path('taskcategory_index') }}" class="uk-button uk-button-primary uk-float-right">
            <i class="uk-icon-folder"></i> Kategorien
        </a>
        <a href="{{ path('task_new') }}" class="uk-button uk-button-success uk-float-right uk-margin-small-right">
            <i class="uk-icon-plus"></i> Neue Aufgabe
        </a>
    </h1>

    <div class="uk-overflow-container">
        <table class="uk-table">
            <thead>
            <tr>
                <th>#</th>
                <th>Aufgabe</th>
                <th>Beschreibung</th>
                <th>Checkliste</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.orderNum }}</td>
                    <td>{{ task.name }}</td>
                    <td>{{ task.description }}</td>
                    <td>{{ task.checklist.name }}</td>
                    <td class="uk-text-right">
                        <a href="{{ path('task_edit', { 'id': task.id }) }}" class="uk-button uk-button-primary">
                            <i class="uk-icon-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
